{{!-- edit delete homepage --}}
<div class="container custom-container-width">
  <div class="row d-flex justify-content-between my-3">
    <div>
      <form action="/restaurants/{{store.id}}/edit" method="GET" style="display: inline;">
        <button type="submit" class="hand-icon btn btn-primary btn-sm"><i class="fas fa-edit"></i> edit</button>
      </form>

      <button class="btn btn-danger btn-sm" type="button" data-toggle="modal"
        data-target="#exampleModalCenter-{{store.id}}"><i class="fas fa-trash"></i> delete</button>



    </div>
    <a href="/">> 回首頁</a>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{store.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{store.location}}
        <a href="{{store.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{store.phone}}
      </p>

      <p class="mb-5">
        {{store.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{store.image}}" alt="{{store.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>


{{!-- modal area --}}
<div class="modal fade" id="exampleModalCenter-{{store.id}}" tabindex="-1" role="dialog"
  aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">刪除 {{store.name}} 的資料</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        你確定要刪除此資料嗎
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
        <form action="/restaurants/{{store.id}}/delete" method="POST" style="display: inline;">
          <button class="btn btn-primary hand-icon " type="submit">確定</button>
        </form>
      </div>
    </div>
  </div>
</div>